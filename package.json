{
  "name": "h4ku-portfolio",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build.js",
    "build:fast": "node scripts/build.js --skip=cms,fingerprint",
    "build:data": "node scripts/build-data.js",
    "fingerprint:inject": "node scripts/inject-fingerprint.js",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "cms": "node scripts/cms.js",
    "sync": "npm run cms",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "size": "size-limit",
    "size:analyze": "size-limit --why",
    "integrity:check": "node scripts/check-integrity.js",
    "ci": "bash scripts/ci/run-all-checks.sh",
    "ci:quality": "bash scripts/ci/check-quality.sh",
    "ci:coverage": "bash scripts/ci/report-coverage.sh",
    "ci:security": "bash scripts/ci/security-scan.sh",
    "ci:bundle": "bash scripts/ci/check-bundle-size.sh",
    "ci:deps": "bash scripts/ci/check-outdated.sh",
    "ci:license": "bash scripts/ci/check-licenses.sh",
    "deps:prune": "npm prune --include=dev",
    "postinstall": "npm run deps:prune"
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.4.1",
    "@sentry/browser": "^10.32.1",
    "framer-motion": "^12.25.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^11.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "license-checker": "^25.0.1",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "size-limit": "^11.2.0",
    "terser": "^5.36.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.52.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.3.1",
    "vite-plugin-sitemap": "^0.8.2",
    "vite-plugin-sri": "^0.0.2",
    "vitest": "^4.0.8"
  },
  "size-limit": [
    {
      "name": "main-chunk",
      "path": "dist/assets/main-*.js",
      "limit": "300 KB",
      "brotli": false,
      "gzip": false
    },
    {
      "name": "react-vendor",
      "path": "dist/assets/rv-*.js",
      "limit": "150 KB",
      "brotli": false,
      "gzip": false
    },
    {
      "name": "icons-vendor",
      "path": "dist/assets/icons-*.js",
      "limit": "50 KB",
      "brotli": false,
      "gzip": false
    },
    {
      "name": "animation-vendor",
      "path": "dist/assets/anim-*.js",
      "limit": "100 KB",
      "brotli": false,
      "gzip": false
    }
  ]
}
